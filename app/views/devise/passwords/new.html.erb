
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html: {class: 'form-signin well'}) do |f| %>
<h2 class="text-center">Forgot your password?</h2>
  <%= f.error_notification %>
  
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
  
    <%= f.button :submit, "Send me password reset instructions", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
