
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, htnl: {class: 'form-signin well'}) do |f| %>
  <h2 class="text-center">Change your password</h2>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

    <%= f.input :password, required: true, autofocus: true,label: false, placeholder: "Password", input_html: {class: 'form-control'} %>
    <%= f.input :password_confirmation, required: true,label: false, placeholder: "Confirm your new password", input_html: {class: 'form-control'} %>

    <%= f.button :submit, "Change my password", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
